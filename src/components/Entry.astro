---
const { url, image, alt, title, desc } = Astro.props;
---

<div class="container">
    <a href={url} class="entry">
        <img src={image} alt={alt} class="entry-image" />
        <div class="entry-text">
            <h2>{title}</h2>
            <p>{desc}</p>
        </div>
    </a>
</div>

<style>
    .container {
        margin: 16px;
    }

    .entry {
        display: block;
        position: relative;
        overflow: hidden;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .entry-image {
        width: 250px;
        height: 250px;
        display: block;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .entry:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
    }

    .entry:hover .entry-image {
        transform: scale(1.1);
    }

    .entry-text {
        position: absolute;
        text-align: center;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 15px;
        background-color: rgba(149, 47, 0, 0.7);
        color: #fff;
        opacity: 0;
        transition: opacity 0.3s;
    }

    .entry:hover .entry-text {
        opacity: 1;
    }
</style>
