---
const { image, title, desc } = Astro.props;
---

<div class="cover">
    <img src={image} class="cover-image" />
    <div class="cover-text">
        <h2>{title}</h2>
        <p>{desc}</p>
    </div>
</div>

<style>
    .cover {
        margin: 16px;
        display: block;
        position: relative;
        overflow: hidden;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .cover-image {
        width: 250px;
        height: 250px;
        display: block;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .cover-text {
        position: absolute;
        text-align: center;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 15px;
        background-color: rgba(149, 47, 0, 0.7);
        color: #fff;
        opacity: 0;
        transition: opacity 0.3s;
    }
</style>
